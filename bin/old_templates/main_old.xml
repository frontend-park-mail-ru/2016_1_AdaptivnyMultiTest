<fest:template xmlns:fest="http://fest.mail.ru" >


<div class = "help"> 
</div>

<div class = "main">
    <dl>
    
        <dt>Game</dt>
        <dd >
            <button class= "btn">Start!</button>
        </dd>


        <dt>Scoreboard</dt>
        <dd>
            <button class= "btn">Top scores</button>
        </dd>



        <dt>Login</dt>

        <dd>
            <form class="contact_form" method="POST">
                <div class="input-field">
                  <label for="username" >Login</label>
                  <div><input type="text" name="username" id="username" placeholder="Your login"/></div>
                </div>
                <div class="input-field">
                  <label for="pass">Password</label>
                  <div><input type="password" name="password" id="password" class="in" placeholder="Your password"/></div>
                </div>
                <div>
                  <button class="btn btn-info pull-right" type="submit">Login!</button>
                </div>
            </form>
        </dd>


        <dt>Register</dt>
        <dd>
            <form class="contact_form" method="POST">
                <div class="input-field">
                  <label for="email" >Email</label>
                  <div><input type="text" name="email" id="email" placeholder="Your email"/></div>
                </div>
                <div class="input-field">
                  <label for="username" >Login</label>
                  <div><input type="text" name="username" id="username" placeholder="Your login"/></div>
                </div>
                <div class="input-field">
                  <label for="pass">Password</label>
                  <div><input type="password" name="password" id="password" class="in" placeholder="Your password"/></div>
                </div>
                <div>
                  <button class="btn btn-info pull-right" type="submit">Sign up!</button>
                </div>
            </form>
        </dd>


    </dl>
</div>

  
      
</fest:template> 
 