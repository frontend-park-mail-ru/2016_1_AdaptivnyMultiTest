<fest:template xmlns:fest="http://fest.mail.ru">
  <div class="help"></div>
      <div class="main">
          <dl class="main__menu">

            <dt class="main__stripe">Game</dt>
            <dd class="main__field">
              <button class="btn">Start!</button>
            </dd>

            <dt class="main__stripe">Scoreboard</dt>
            <dd style="display:none">
              <button class="btn">Top scores</button>
            </dd>


            <dt class="main__stripe">Login</dt>
            <dd class="main__field" style="display:none">
                <form class="main__form">
                    <div class="input-field">
                       <label for="username" >Login</label>
                       <div><input type="text" name="username" id="username" placeholder="Your login"/>
                       </div>
                    </div>
                    <div class="input-field">
                        <label for="pass">Password</label>
                        <div><input type="password" name="password" id="password" class="in" placeholder="Your password"/>
                        </div>
                    </div>
                    <div>
                        <button class="btn" type="submit">Login!</button>
                    </div>
                </form>
            </dd>

            <dt class="main__stripe" style="display:none;">Register</dt>
            <dd class="main__field" style="display:none">
                    <form class="main__form">
                      <div class="input-field">
                                  <label for="email" >Email</label>
                                  <div><input type="text" name="email" id="email" placeholder="Your email"/></div>
                              </div>
                              <div class="input-field">
                                  <label for="username" >Login</label>
                                  <div><input type="text" name="username" id="username" placeholder="Your login"/></div>
                              </div>
                              <div class="input-field">
                                  <label for="password">Password</label>
                                  <div><input type="password" name="password" id="password" class="in" placeholder="Your password"/></div>
                              </div>
                              <div>
                                  <button class="btn" type="submit">Sign up!</button>
                              </div>
                        </form>
            </dd>
          </dl>
      </div>
</fest:template> 
