<fest:template xmlns:fest="http://fest.mail.ru" context_name="user">
   <div class="bs-panel panel panel_wide"> 
     <form class="joingame">
         <h2 class="joingame__heading">Find Game</h2>
         <div class="joingame__selector">
             <h4 class="selector__title">Choose game</h4>
             <table class="joingame__table" border="1" width="100%" cellpadding="5">
                 <tr class="table__header">
                     <th class="table__counter" >№</th>
                     <th>Name</th>
                     <th>Theme</th>
                     <th>Questions</th>
                     <th>Time</th>
                     <th></th>
                 </tr>
                 <tr>
                     <th class="table__counter" >1</th>
                     <th>Зеленый слоник</th>
                     <th>Прикладная некромантия</th>
                     <th>10</th>
                     <th>20 min</th>
                     <th>
                         <button class="joingame__btn joingame__btn_small-join"  id="joinGame" type="submit"> Join </button>
                     </th>
                 </tr>
             </table>
         </div>
     </form>

     <div class="menu menu_for-back">
         <a href="#main"class="menu__btn_short"> Back</a>
     </div>

   </div>
      
</fest:template> 
