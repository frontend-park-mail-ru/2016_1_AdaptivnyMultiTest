<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="help"> 
    </div>
    <div class="main">
        <dl class="main__menu">
            <dt class="main__stripe">ScoreBoard</dt>
            <dd class="main__field">
                <ul class="main__scores">
                    <fest:for iterate="json" index="i" value="v">
                        <li><span><fest:value output="text">v.login</fest:value></span><em><fest:value>v.score</fest:value></em></li>
                        <hr />
                    </fest:for>
                </ul>
                <a href="#main" class="btn">Back</a>
            </dd>
        </dl>
    </div>
</fest:template>