<fest:template xmlns:fest="http://fest.mail.ru" context_name="SignupErrors">
    <div class="bs-panel panel"> 
        <form class="form" role="form">
            <h2 class="form__heading">Registration</h2>
                <input class="form__control" placeholder="Login" id="loginError_signup" required="" autofocus="" type="login" name="login"/>

                <input class="form__control" placeholder="Email address" required="" autofocus="" id="emailError" type="email" name="email"/>

                <input class="form__control" id="passwordError" placeholder="Password" required="" type="password" id="passwordError_signup" name="password"/>
                <button class="btn" type="submit" id="submitSignup"> Create </button>
              <div class="form__validate-messages_hide"></div>
        </form>
        <div class="menu menu_for-back">
           <a href="#main" class="btn btn_short"> Back</a>
        </div>
    </div>
</fest:template>
