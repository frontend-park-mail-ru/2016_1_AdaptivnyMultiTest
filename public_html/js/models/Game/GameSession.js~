define(
    function (require) {
        var Backbone = require('backbone');
        
        var Model = Backbone.Model.extend({
	    	defaults: {
	    		idGameSession: '',
	    		login: '',
	    		theme: '',
	    		gameScore: 0,
	    		questionNum: 0,
			questions: null,
			playerAnswers: null
	    	},
	    	urlRoot : "api/gameSession",
		
			getCustomUrl: function (method) {
		        switch (method) {
		            case 'read': 
		                return this.urlRoot;
		                break;
		        }
	    	},
	    	sync: function (method, model, options) {
	        	options || (options = {});
	        	options.url = this.getCustomUrl(method.toLowerCase());
	        	return Backbone.sync.apply(this, arguments);
	    	},
	    });

        var gameSessionModel = new Model(
        {
        	idGameSession: 1,
	    	login: "Player1",
	    	theme: 'Theme1',
	    	gameScore: 5,
	    	questionNum: 5
        });
       
        return gameSessionModel;
	    //return Model;  
});


